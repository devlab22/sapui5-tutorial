<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
  <layout:ResponsiveFlowLayout
      id="addressContent"
      visible="false">
    <layout:VerticalLayout width="100%">

      <form:Form editable="false">

        <!-- <form:title>
          <core:Title text="GeschÃ¤ftspartner-Details" />
        </form:title> -->

        <form:layout>
          <!-- <form:ColumnLayout columnsL="2" /> -->
          <form:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="3"
					columnsL="2"
					columnsM="2"
					singleContainerFullSize="false" />
        </form:layout>

        <form:formContainers>

           <form:FormContainer title="Adresse">
            <form:formElements>
              <form:FormElement label="Strasse">
                <form:fields>
                  <Text text="{personal>Address/Street} {personal>Address/Building}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Land">
                <form:fields>
                  <Text text="{personal>Address/Country}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="PLZ Stadt">
                <form:fields>
                  <Text text="{personal>Address/PostalCode} {personal>City}" />
                </form:fields>
              </form:FormElement>

            </form:formElements>
          </form:FormContainer>

        </form:formContainers>

      </form:Form>

    </layout:VerticalLayout>

  </layout:ResponsiveFlowLayout>
</core:FragmentDefinition>