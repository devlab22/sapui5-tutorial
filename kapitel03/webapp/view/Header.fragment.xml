<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
  <layout:ResponsiveFlowLayout
      id="headerContent"
      visible="false">
    <layout:VerticalLayout width="100%">

      <form:Form editable="false">

        <!-- <form:title>
          <core:Title text="GeschÃ¤ftspartner-Details" />
        </form:title> -->

        <form:layout>
          <!-- <form:ColumnLayout columnsL="2" /> -->
          <form:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="3"
					columnsL="2"
					columnsM="2"
					singleContainerFullSize="false" />
        </form:layout>

        <form:formContainers>

          <form:FormContainer title="Firma">
            <form:formElements>
              <form:FormElement label="Firmenname">
                <form:fields>
                  <Text text="{personal>CompanyName}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Partner ID">
                <form:fields>
                  <Text text="{personal>BusinessPartnerID}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Legal Form">
                <form:fields>
                  <Text text="{personal>LegalForm}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Ansprechspartner">
                <form:fields>
                  <Text text="{personal>Vorname} {personal>Nachname}" />
                </form:fields>
              </form:FormElement>

            </form:formElements>
          </form:FormContainer>

          <form:FormContainer title="Kontaktdaten">
            <form:formElements>
              <form:FormElement label="URL">
                <form:fields>
                  <Text text="{personal>WebAddress}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="E-Mail">
                <form:fields>
                  <Text text="{personal>EmailAddress}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Telefon">
                <form:fields>
                  <Text text="{personal>PhoneNumber}" />
                </form:fields>
              </form:FormElement>

              <form:FormElement label="Fax">
                <form:fields>
                  <Text text="{personal>FaxNumber}" />
                </form:fields>
              </form:FormElement>

            </form:formElements>
          </form:FormContainer>

        </form:formContainers>

      </form:Form>

