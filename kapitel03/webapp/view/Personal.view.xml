<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:uxap="sap.uxap"
        xmlns:core="sap.ui.core"
        controllerName="de.sapui5buch.demo.controller.Personal">
    <Panel
            class="sapUIResponsiveMargin"
            headerText="Personal"
            >
        <uxap:ObjectPageLayout
                id="ObjectPageLayout"
                showHeaderContent="false"
                toggleHeaderOnTitleClick="false">

            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:heading>
                        <Input
                                id="idInputField"
                                width="20rem"
                                placeholder="BusinessPartner ID..."
                                suggestionItemSelected="onSuggestionItemSelected"
                                showSuggestion="true"
                                showValueHelp="true"
                                suggest="onSuggest"
                                valueHelpRequest="onValueHelpRequest"
                                suggestionItems="{personal>/data}">
                            <suggestionItems>
                                <core:Item text="{personal>BusinessPartnerID} {personal>CompanyName}" />
                            </suggestionItems>
                        </Input>
                    </uxap:heading>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <uxap:headerContent>
                <FlexBox
                        wrap="Wrap"
                        fitContainer="true"
                        id="headerContent">
                    <VBox class="sapUiLargeMarginEnd">
                        <HBox>
                            <Title text="Partnerdata" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Firmenname:" />
                            <Text text="{personal>CompanyName}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Partner ID:" />
                            <Text text="{personal>BusinessPartnerID}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Legal Form:" />
                            <Text text="{personal>LegalForm}" />
                        </HBox>
                    </VBox>
                    <VBox class="sapUiLargeMarginEnd">
                        <HBox>
                            <Title text="Kontaktdaten" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="URL:" />
                            <Text text="{personal>WebAddress}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Email-Addresse:" />
                            <Text text="{personal>EmailAddress}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Telefon:" />
                            <Text text="{personal>PhoneNumber}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Fax:" />
                            <Text text="{personal>FaxNumber}" />
                        </HBox>
                    </VBox>

                    <VBox>
                        <HBox>
                            <Title text="Adresse" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Strasse" />
                            <Text text="{personal>Address/Street}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="Land" />
                            <Text text="{personal>Address/Country}" />
                        </HBox>
                        <HBox>
                            <Label
                                    class="sapUiTinyMarginEnd"
                                    text="PLZ Stadt" />
                            <Text text="{personal>Address/PostalCode} {personal>City}" />
                        </HBox>
                    </VBox>
                </FlexBox>
            </uxap:headerContent>

           <!--  <uxap:sections>
                <uxap:ObjectPageSection
                        title="Adresse"
                        visible="false"
                        id="addressSection">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                               <VBox>
                                <HBox>
                                    <Label
                                            class="sapUiTinyMarginEnd"
                                            text="Strasse:" />
                                    <Text text="{personal>Street} {personal>Building}" />
                                </HBox>
                                <HBox>
                                    <Label
                                            class="sapUiTinyMarginEnd"
                                            text="Land PLZ Ort:" />
                                    <Text text="{personal>Country} {personal>PostalCode} {personal>City}" />
                                </HBox>
                            </VBox>  
                           
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>

                </uxap:ObjectPageSection>

                              
            </uxap:sections> -->

        </uxap:ObjectPageLayout>


        <core:Fragment
            fragmentName="de.sapui5buch.demo.view.Counter"
            type="XML"
        />
    </Panel>
</mvc:View>